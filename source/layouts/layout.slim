doctype html
html
  head
    meta charset="utf-8"
    meta http-equiv='X-UA-Compatible' content='IE=edge;chrome=1'
    meta name="viewport" content="width=device-width, initial-scale=1"
    /
      meta content="width=device-width,initial-scale=1.0,minimum-scale=1.0,maximum-scale=1.0,user-scalable=no" name="viewport"

    title = "space.fail#{ ' - ' + current_article.title unless current_article.nil?}"
    /= feed_tag :atom, "#{blog.options.prefix.to_s}/feed.xml", title: "Atom Feed"

    / link href='https://fonts.googleapis.com/css?family=Raleway:400,700|Anonymous+Pro:400,700,400italic,700italic&subset=latin,greek' rel='stylesheet' type='text/css'

    /= stylesheet_link_tag :site
    /= javascript_include_tag :all

    scss:
      html, body {
        height: 100%;
        background-color: #000;
      }

      div {
        display: -webkit-box;
        display: -webkit-flex;
        display: -ms-flexbox;
        display: flex;

        -webkit-box-align: center;
        -webkit-align-items: center;
        -ms-flex-align: center;
        align-items: center;

        -webkit-box-pack: center;
        -webkit-justify-content: center;
        -ms-flex-pack: center;
        justify-content: center;
        width: 100%;
        height: 100%;
      }

      span {
        color: #eee;
        font-family: Helvetica, Arial, sans-serif;
        letter-spacing: 2px;
        display: block;
        max-width: 50%;
      }

  body class=page_classes
    div
      = yield
